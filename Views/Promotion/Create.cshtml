@model ASP_P22.Data.Entities.Promotion

<h2>Створити акцію</h2>

<form asp-action="Create" method="post">
    <ul>
        <p><label>Назва:</label></p>
        <p><input asp-for="Name" required /></p>

        <p><label>Опис:</label></p>
        <p><input asp-for="Description" /></p>

        <p><label>Відсоток знижки:</label></p>
        <p><input asp-for="DiscountPercentage" type="number" step="0.01" required /></p>

        <p><label>Дата початку:</label></p>
        <p><input asp-for="StartDate" type="date" required /></p>

        <p><label>Дата завершення:</label></p>
        <p><input asp-for="EndDate" type="date" required /></p>

        <p><button type="submit">Додати</button></p>
    </ul>
</form>
